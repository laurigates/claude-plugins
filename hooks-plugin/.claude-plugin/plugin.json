{
  "name": "hooks-plugin",
  "version": "1.3.1",
  "description": "Claude Code hooks for enforcing best practices and workflow automation",
  "author": {
    "name": "Lauri Gates"
  },
  "repository": "https://github.com/laurigates/claude-plugins",
  "license": "MIT",
  "keywords": [
    "hooks",
    "automation",
    "best-practices",
    "workflow",
    "anti-patterns",
    "tooling",
    "kubernetes",
    "kubectl",
    "helm"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/bash-antipatterns.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/validate-kubectl-context.sh",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}
