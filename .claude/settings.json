{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(fd *)",
      "Bash(gh issue *)",
      "Bash(gh pr *)",
      "Bash(gh run *)",
      "Bash(git add *)",
      "Bash(git branch *)",
      "Bash(git cherry-pick *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git merge *)",
      "Bash(git push *)",
      "Bash(git rebase *)",
      "Bash(git remote *)",
      "Bash(git reset *)",
      "Bash(git restore *)",
      "Bash(git rev-parse *)",
      "Bash(git show *)",
      "Bash(git stash *)",
      "Bash(git status *)",
      "Bash(git switch *)",
      "Bash(git tag *)",
      "Bash(ls *)",
      "Bash(pre-commit *)",
      "Bash(rg *)",
      "WebFetch(domain:agentic-patterns.com)",
      "mcp__chrome-devtools",
      "mcp__context7",
      "mcp__playwright",
      "mcp__sequential-thinking",
      "mcp__serena"
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "serena"
  ],
  "enabledPlugins": {},
  "extraKnownMarketplaces": {}
}
